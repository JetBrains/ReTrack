<Page x:Class="ReTrack.Standalone.Pages.QueryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:reTrack="clr-namespace:ReTrack;assembly=ReTrack.UI"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="QueryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Button Name="btnSettings" Content="Settings" Click="BtnSettings_OnClick" />
        </StackPanel>
        
        <reTrack:YouTrackExplorerWindow Name="ExplorerWindow" Grid.Row="1" />
    </Grid>
</Page>